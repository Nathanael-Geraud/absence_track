# Configuration de l'environnement serveur
NODE_ENV=production
PORT=5000

# Clé secrète pour les sessions
SESSION_SECRET=votre_secret_de_session_tres_securise

# Configuration CORS - Remplacer par l'URL de votre frontend
CORS_ORIGIN=https://votre-app.netlify.app

# Configuration Twilio pour les SMS
TWILIO_ACCOUNT_SID=votre_twilio_account_sid
TWILIO_AUTH_TOKEN=votre_twilio_auth_token
TWILIO_PHONE_NUMBER=votre_numero_twilio_avec_code_pays

# Configuration optionnelle pour les tests SMS
# TWILIO_TEST_TO_NUMBER=numero_pour_les_tests

# Configuration de la base de données PostgreSQL (si utilisée)
# DATABASE_URL=postgres://utilisateur:mot_de_passe@hote:port/nom_db